{
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "description": "An Express powered web app for downloading YouTube music videos",
  "env": {
    "PM2_PUBLIC_KEY": {
      "description": "Public key for PM2+ integration",
      "required": false
    },
    "PM2_SECRET_KEY": {
      "description": "Secret key for PM2+ integration",
      "required": false
    },
    "PORT": {
      "description": "Port to listen on",
      "required": false,
      "value": "80"
    },
    "SENTRY_DSN": {
      "description": "URI for error logging on Sentry",
      "required": false
    },
    "SQREEN_TOKEN": {
      "description": "Token to use for protecting the application with Sqreen",
      "required": false
    },
    "URL": {
      "description": "URL of the instance",
      "required": false
    },
    "YOUTUBE_API_KEY": {
      "description": "YouTube Data API v3 key used for searching for videos",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "keywords": [
    "express",
    "ytdl",
    "webapp"
  ],
  "logo": "https://raw.githubusercontent.com/pizzafox/maroon/master/public/img/logo.png",
  "name": "maroon",
  "repository": "https://github.com/pizzafox/maroon",
  "success_url": "/welcome"
}
